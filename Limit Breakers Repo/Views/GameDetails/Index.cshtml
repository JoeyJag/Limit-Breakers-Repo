@model IEnumerable<Limit_Breakers_Repo.Models.GameDetails>

@{
    ViewBag.Title = "Index";
}

<style>

    body{
        background-image: url("../../Content/background/cascadebackground.jpg");
        background-size:cover;
    }

table{
    border: 3px solid black;
    border-collapse: collapse;
}

th,td{
    padding:8px;
    border-bottom: 1px solid black;
}

tr:hover {background-color:#f5f5f5;}
</style>

<h2>Games List</h2>

<p>
    @Html.ActionLink("Add New Game", "Create")
</p>
<table class="table" >
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th >
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th >
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th >
            @Html.DisplayNameFor(model => model.ImageLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameLocation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.ImageLocation)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.GameLocation)
        </td>
        <td align="center">
            @Html.ActionLink("Edit", "Edit", new { id=item.GameID }) |
            @Html.ActionLink("Details", "Details", new { id=item.GameID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GameID })
        </td>
    </tr>
}

</table>
